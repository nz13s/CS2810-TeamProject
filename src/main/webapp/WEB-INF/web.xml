<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>DatabaseFilter</filter-name>
        <filter-class>filters.DatabaseConnectionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DatabaseFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>HeaderSessionFilter</filter-name>
        <filter-class>filters.HeaderSessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HeaderSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>filters.RestrictedAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/restricted/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Menu</servlet-name>
        <servlet-class>endpoints.MenuToFrontend</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Order</servlet-name>
        <servlet-class>endpoints.AddToOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>endpoints.Hello</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>endpoints.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveOrder</servlet-name>
        <servlet-class>endpoints.SaveOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveOrder</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrdersToFrontend</servlet-name>
        <servlet-class>endpoints.OrdersToFrontend</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersToFrontend</servlet-name>
        <url-pattern>restricted/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DebugMakeLogin</servlet-name>
        <servlet-class>endpoints.debug.DebugMakeLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DebugMakeLogin</servlet-name>
        <url-pattern>/debug/makelogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExampleRestricted</servlet-name>
        <servlet-class>endpoints.restricted.ExampleRestricted</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExampleRestricted</servlet-name>
        <url-pattern>/restricted/echo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditMenuItem</servlet-name>
        <servlet-class>endpoints.restricted.EditMenuItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditMenuItem</servlet-name>
        <url-pattern>/restricted/editmenu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StaffNotifications</servlet-name>
        <servlet-class>endpoints.restricted.StaffNotifications</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffNotifications</servlet-name>
        <url-pattern>/restricted/staffnotifications</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderUpdate</servlet-name>
        <servlet-class>endpoints.OrderUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderUpdate</servlet-name>
        <url-pattern>/restricted/update</url-pattern>
    </servlet-mapping>

</web-app>